# Copy this file to .env and fill values (do NOT commit .env)

# Twilio Configuration
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_PHONE_NUMBER=your_twilio_phone_number_here

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=yourgmail@gmail.com
EMAIL_HOST_PASSWORD=your_app_password_no_spaces
EMAIL_USE_TLS=true

# Optional
# DEFAULT_FROM_EMAIL=SafeTrip <yourgmail@gmail.com>

# Emergency alert recipients (comma-separated)
AUTHORITY_ALERT_EMAILS=police@example.com,ambulance@example.com
